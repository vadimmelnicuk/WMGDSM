<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HRV Analysis"
            android:textSize="@dimen/fragment_modules_font_size"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/rmssd30_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rmssd30_label"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/fragment_modules_font_size"/>

        <TextView
            android:id="@+id/rmssd120_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rmssd120_label"
            android:textColor="@color/colorYellow"
            android:textSize="@dimen/fragment_modules_font_size"/>

        <com.jjoe64.graphview.GraphView
            android:id="@+id/rmssd30_graph"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

    </LinearLayout>

</LinearLayout>